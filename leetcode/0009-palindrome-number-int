class Solution {
    public int reverse(int x) {
        int result = 0;
        while (x != 0) {
            result *= 10;
            result += x % 10;
            x /= 10;
        }
        return result;
    }

    public boolean isPalindrome(int x) {
        if (x < 0) {
            return false;
        }

        if (x == reverse(x)) {
            return true;
        }
        return false;
    }
}